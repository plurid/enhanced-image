{
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "skipLibCheck": true,
        "noStrictGenericChecks": true,
        "declaration": false,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "module": "esnext",
        "target": "es2017",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "react",
        "jsxFactory": "h",
        "types": [
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "src",
        "types/jsx.d.ts"
    ],
    "exclude": [
        "node_modules/**",
        "**/*.spec.ts"
    ]
}
