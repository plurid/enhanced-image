{
    "compilerOptions": {
        "baseUrl": "../",
        "paths": {
            "#assets/*": [
                "./source/assets/*"
            ],
            "#components/*": [
                "./source/components/*"
            ],
            "#containers/*": [
                "./source/containers/*"
            ],
            "#data/*": [
                "./source/data/*"
            ],
            "#logic/*": [
                "./source/logic/*"
            ],
            "#services/*": [
                "./source/services/*"
            ]
        },

        "allowSyntheticDefaultImports": true,
        "module": "es2015",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "../",
        "outDir": "distribution",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "declaration": true,
        "types": ["react", "jest"]
    },
    "include": [
        "source/**/*",
        "source/typings.d.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "source/setupTests.ts",
        "**/*/*.test.ts",
        "examples"
    ]
}
