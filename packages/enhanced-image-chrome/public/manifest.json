{
    "manifest_version": 2,
    "name": "Enhanced Image",
    "short_name" : "EnhImg",
    "description": "Select text, generate similar images, translate image text, and alter the image colors.",
    "author": "caveljan",
    "version": "0.0.1",
    "icons": {
        "16": "./assets/logo-16.png",
        "48": "./assets/logo-48.png",
        "128": "./assets/logo-128.png"
    },
    "permissions": [
        "activeTab",
        "management",
        "<all_urls>",
        "contextMenus"
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": [
            "/app/contentScript.js"
        ],
        "run_at": "document_end"
    }],
    "background": {
        "scripts": ["/app/backgroundContextMenus.js"],
        "persistent": false
    },
    "web_accessible_resources": [
        "enhanced-image-html/dist/**.js"
    ],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "browser_action": {
        "default_popup": "index.html",
        "default_title": "Enhanced Image"
    },
    "content_security_policy": "script-src 'self' 'sha256-5As4+3YpY62+l38PsxCEkjB1R4YtyktBtRScTJ3fyLU='; object-src 'self'"
}
